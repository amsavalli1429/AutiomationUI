pipeline {
    agent any

    tools {
        maven 'Maven_3_9_0'
        jdk 'Java_17'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/amsavalli1429/AutiomationUI.git'
            }
        }

        stage('Build and Test') {
            steps {
                echo 'Running Maven build and tests...'
                bat 'mvn clean test'
            }
        }

        stage('Publish Report') {
            steps {
                publishHTML(target: [
                    allowMissing: false,
                    alwaysLinkToLastBuild: true,
                    keepAll: true,
                    reportDir: 'test-output',
                    reportFiles: '**/*.html',
                    reportName: 'Extent Report'
                ])
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
        }
        failure {
            mail to: 'amsavallira114@gmail.com',
                 subject: "Jenkins Build Failed: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                 body: "Hi Amsavalli,\n\nBuild failed. Please check Jenkins console for details.\n\n- Jenkins"
        }
    }
}
